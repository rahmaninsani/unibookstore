<section id="admin-add-book">
  <div class="container mt-5 px-3 py-5">
    <div class="text-center mb-3">
      <h1>Edit Data Penerbit</h1>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-5">
        <form action="/admin/penerbit/<%= data.publisher.code %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="code" class="form-label">ID/Kode Penerbit</label>
            <input type="text" class="form-control" id="code" name="code" required value="<%= data.publisher.code %>" />
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Nama</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              autocomplete="off"
              required
              value="<%= data.publisher.name %>"
            />
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Alamat</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              required
              value="<%= data.publisher.address %>"
            />
          </div>
          <div class="mb-3">
            <label for="city" class="form-label">Kota</label>
            <input type="text" class="form-control" id="city" name="city" required value="<%= data.publisher.city %>" />
          </div>
          <div class="mb-3">
            <label for="phoneNumber" class="form-label">Telepon</label>
            <input
              type="text"
              class="form-control"
              id="phoneNumber"
              name="phoneNumber"
              required
              value="<%= data.publisher.phoneNumber %>"
            />
          </div>
          <button type="submit" name="submit" class="btn btn-success">Simpan</button>
          <a class="btn btn-outline-secondary" href="/admin/penerbit">Kembali</a>
        </form>
      </div>
    </div>
  </div>
</section>
