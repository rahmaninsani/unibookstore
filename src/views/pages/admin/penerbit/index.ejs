<section id="admin-books">
  <div class="container mt-5 px-3 py-5">
    <div class="row justify-content-between mb-3">
      <div class="col-4">
        <h1>Daftar Penerbit</h1>
      </div>
      <div class="col-4 text-end">
        <a href="/admin/penerbit/tambah" class="btn btn-primary">Tambah Penerbit</a>
      </div>
    </div>

    <div id="books">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">ID Penerbit</th>
            <th scope="col">Nama</th>
            <th scope="col">Alamat</th>
            <th scope="col">Kota</th>
            <th scope="col">Telepon</th>
          </tr>
        </thead>
        <tbody>
          <% data.publishers.map((publisher, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= publisher.code %></td>
            <td><%= publisher.name %></td>
            <td><%= publisher.address %></td>
            <td><%= publisher.city %></td>
            <td><%= publisher.phoneNumber %></td>
            <td>
              <a href="/admin/penerbit/<%= publisher.code %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form class="d-inline" method="POST" action="/admin/penerbit/<%= publisher.code %>?_method=DELETE">
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
