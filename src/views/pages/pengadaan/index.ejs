<section id="admin-books">
  <div class="container mt-5 px-3 py-5">
    <div class="mb-3">
      <h1>Pengadaan Buku</h1>
    </div>
    <div id="books">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Buku</th>
            <th scope="col">Penerbit</th>
            <th scope="col">Stok</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% data.books.map((book, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= book.title %></td>
            <td><%= book.publisherName %></td>
            <td><%= book.stock %></td>
            <td>
              <a href="/admin/buku/<%= book.code %>/edit" class="btn btn-sm btn-success">Tambah</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
